

<h1><a href="/">Home</a></h1>
<h1>Update {{review.title}}:</h1>
<form id="update-Review" action="/reviews" method="post">
    Rating: <select>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select><br>
    Review Title: <input type="text" name="title"><br>
    Review Body: <input type="text" name="body"><br>
    Reviewer: <select name="user-name" id="user-selector">
        {{#each user}}
        <option value="{{id}}">{{fname}} {{lname}}</option>
        {{/each}}
    </select><br />
    Listing Title:
    <select name="listing-title" id="listing-selector">
        {{#each listing}}
        <option value="{{id}}">{{listing_title}}</option>
        {{/each}}
    </select>
</form>
<button onclick="updateReview({{review.id}})">Update</button>
<br /><br />

<h1>Mark {{review.title}} Helpful:</h1>
<form id="mark-helpful" action="/reviews" method="post">
    Reviewer: <select name="user-name" id="user-selector">
        {{#each user}}
        <option value="{{id}}">{{fname}} {{lname}}</option>
        {{/each}}
    </select><br />
    Is this review helpful?
    <input type="radio" name="helpful" value="No" checked>No
    <input type="radio" name="helpful" value="Yes">Yes <br />
    </select>
</form>
<button onclick="updateReview({{review.id}})">Mark Helpful</button>