
<h1><a href="/">Home</a></h1>
<h1>Update Review "{{review.title}}":</h1>
<form id="updatereview" action="/review" method="post">
    Rating: <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select><br>
    Review Title: <input type="text" name="title" value="{{review.title}}"><br>
    Review Body: <input type="text" name="body" value="{{review.body}}"><br>
    Reviewer: <select name="uid" id="user-selector">
        {{#each user}}
        <option value="{{uid}}">{{fname}} {{lname}}</option>
        {{/each}}
    </select><br />
    Listing Title:
    <select name="lid" id="listing-selector">
        {{#each listing}}
        <option value="{{lid}}">{{listing_title}}</option>
        {{/each}}
    </select>
</form>
<button onclick="updateReview({{review.rid}})">Update</button>
